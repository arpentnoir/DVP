{
  "openapi": "3.0.0",
  "info": {
    "version": "0.1",
    "title": "DVP",
    "description": "API for the Digital Verification Platform"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Local environment"
    },
    {
      "url": "https://dev.api.dvp.ha.showthething.com",
      "description": "Development environment"
    }
  ],
  "paths": {
    "/storage/documents/{documentId}": {
      "get": {
        "summary": "Get encrypted document by Id",
        "parameters": [
          {
            "name": "documentId",
            "in": "path",
            "required": true,
            "description": "The encrypted documents object Id",
            "example": "b1e0a450-1dad-495d-9cae-ab80f3b00591",
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved the document",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EncryptedDocumentObject"
                }
              }
            }
          },
          "400": {
            "$ref": "openapi.errors.json#/components/responses/badRequestErrorResponse"
          },
          "404": {
            "$ref": "openapi.errors.json#/components/responses/resourceNotFoundErrorResponse"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Id": {
        "type": "string",
        "format": "uuid"
      },
      "EncryptedDocumentObject": {
        "type": "object",
        "required": ["document"],
        "properties": {
          "document": {
            "type": "object",
            "required": ["cipherText", "iv", "tag", "type"],
            "properties": {
              "cipherText": {
                "type": "string",
                "example": "",
                "description": "Encrypted verifiable credential"
              },
              "iv": {
                "type": "string",
                "example": "LKwFbAzol64l0OyN",
                "description": "Initialisation vector"
              },
              "tag": {
                "type": "string",
                "example": "EOH28x8yC2pJDFCX/wVhqg==",
                "description": "Message authentication code (MAC)"
              },
              "type": {
                "type": "string",
                "example": "OPEN-ATTESTATION-TYPE-1",
                "description": "Encryption algorithm identifier (OA)"
              }
            }
          }
        }
      }
    }
  }
}
